<div {{bind-attr class=':row :page :video-page'}}>
  <div class='small-5 large-5 columns with-content with-minimum'>
    <h1>{{{title}}}</h1>
    <p>{{{body}}}</p>
  </div>
  <div class='small-7 large-7 columns with-media with-minimum'>
    {{video-player finished='finished' mandatory=mandatoryOverride source=source}}
  </div>
</div>
<div class='row page-footer'>
  <div class='small-6 medium-6 large-6 columns'>
    <div class='page-abbreviations'>
      <p>{{{abbreviations}}}</p>
    </div>
  </div>
  <div class='small-6 medium-6 large-6 columns'>
    <div class='page-actions'>
      <a {{bind-attr class=':right complete:enabled:disabled'}} {{action 'next' step}}>{{i18n course.actions.next}}<i class='fi-arrow-right'></i></a>
    </div>
  </div>
</div>
