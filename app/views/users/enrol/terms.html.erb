<div class='devise registrations terms row'>
  <div class='small-6 medium-6 large-6 columns with-content with-minimum'>
  </div>
  <div class='small-6 medium-6 large-6 columns with-content with-minimum'>
    <ul class='progress'>
      <li></li>
      <li></li>
      <li class='selected'></li>
      <li></li>
    </ul>
    <h1><%= t('.title_html') %></h1>
    <%= t('.description_one_html') %>
    <%= simple_form_for(@user, url: users_locale_enrol_path, html: { method: :put, class: 'form' }) do |f| %>
      <%= render 'tmp_storage_fields', f: f %>
      <div class='form-inputs'>
        <%= f.input :terms_and_conditions_opt_in, required: true, label: t('.terms_accept_html') %>
      </div>
      <% if (I18n.locale == :de || I18n.locale == :'de-at') %>
        <br>
        <%= t('.description_two_html') %>
        <div class='form-inputs'>
          <%= f.input :cookies_opt_in, required: true, label: t('.cookies_accept_html') %>
        </div>
      <% end %>
      <div class='form-actions button-container'>
        <%= button_tag(type: 'submit', class: 'btn btn-primary') do %>
          <%= t('course.actions.next') %><i class='fi-arrow-right'></i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
